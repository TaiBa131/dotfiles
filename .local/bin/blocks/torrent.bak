#!/usr/bin/env sh

transmission-remote -l | grep % |
	sed "s/.*Stopped.*/A/g;
	s/.*Seeding.*/Z/g;
	s/.*100%.*/N/g;
	s/.*Idle.*/B/g;
	s/.*Uploading.*/L/g;
	s/.*%.*/M/g" |
		sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
				s/A//g;
				s/B//g;
				s/L//g;
				s/M//g;
				s/N//g;
				s/Z//g" | awk '{print $2, $1}' | sed ':a;N;$!ba;s/\n/ /g' | sed -e "s/ $//g"

case $BLOCK_BUTTON in
    1) swaymsg -q -- exec $TERMINAL -e transmission-remote-cli & ;;
esac
