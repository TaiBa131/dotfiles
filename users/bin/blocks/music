#!/usr/bin/env bash

[ -z "$(mpc current)" ] && exit
file=$(mpc current -f "%file%")
[[ "$file" =~ ^https:\/\/lainon\.life\/radio\/.*\.ogg$ ]] && exit
[ "$file" = "https://listen.moe/stream" ] && exit
[ "$file" = "http://stream.pianoramaradio.ru" ] && exit

FORMAT="[%albumartist% - ]|[%artist% - ]&%title%"
mpc -f "$FORMAT" current
case $BLOCK_BUTTON in
    1) i3-msg -q -- exec $TERMINAL -e ncmpcpp & ;;
    3) mpc -q toggle & ;;
    4) mpc -q next; sleep 0.5 & ;;
    5) mpcprevious.sh; sleep 0.5 & ;;
esac
